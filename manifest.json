{
  "manifest_version": 2,

  "name": "Sefaria",
  "description": "Learn Torah daily!",
  "version": "1.00",
  "chrome_url_overrides" : {
    "newtab": "tab.html"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TorahTab by Sefaria"
  },
  "background": {
    "scripts": ["bundle/background-bundle.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "alarms"
  ]
}
